.synergy-table-main {
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
    flex-wrap: wrap;
    -webkit-align-content: center;
    align-content: flex-start;
    margin-top: 20rpx;
}

.synergy-table-main:first-child{
    margin-top: 0;
}

.synergy-table-main .main-left {
    text-align: center;
    margin-top: 20rpx;
}

.synergy-table-main .main-left .avatars {
    width: 140rpx;
}

.synergy-table-main .main-right {
    flex: 1;
    text-align: left;
    margin-left: 20rpx ;
    margin-top: 20rpx;
}

.synergy-table-main .main-right .title {
    font-size: 40rpx;
    background: none;
}

.synergy-table-main .main-right .info {
    font-size: 26rpx;
    padding: 20rpx;
    background-color: #f5f6f7;
    color: grey;
}

.synergy-table-main .main-left .synergy-pic {
    background: none;
    width: 100rpx;
    height: 100rpx;
}

.synergy-table-main .main-left .avatars > l-avatar {
    margin-right: 10rpx;
}
