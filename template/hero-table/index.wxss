.tab-content {
    margin: 20rpx;
}

.synergy-list-head {
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 40rpx;
}

.synergy-list-head>text {
    display: inline-block;
    vertical-align: middle;
    /*color: #959db9;*/
    color: black;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.synergy-list-head>text:nth-of-type(1), .synergy {
    width: 30%;
}

.synergy-list-head>text:nth-of-type(2), .synergy-race{
    width: 30%;
    padding-left: 20rpx;
    padding-right: 20rpx;
    box-sizing: border-box;
}

.synergy-list-head>text:nth-of-type(3), .synergy-job {
    width: 30%;
    padding-left: 20rpx;
    box-sizing: border-box;
}

.synergy-list-head>text:nth-of-type(4), .synergy-money {
    width: 10%;
}

.synergy-list-body {
    /*background: #0b1536;*/
}

.synergy-item {
    display: flex;
    align-items: stretch;
    margin: 0 20rpx 30rpx 20rpx;

    align-items: center;
    justify-content: initial;
}

.synergy-item:first-child {
    border-top: none;
}

.synergy-money {
    line-height: 3;
    color: black;
    font-size: 28rpx;
}

.synergy {
    line-height: 1;
}

.synergy-list-body .synergy-item .synergy-race .hero-pic,
.synergy-list-body .synergy-item .synergy-job .hero-pic  {
    height: 50rpx;
    width: 50rpx;
    background: none;
    color: black;
}

.synergy-list-body .synergy-item .synergy-race .hero-pic-text,
.synergy-list-body .synergy-item .synergy-job .hero-pic-text {
    color: black;
    font-size: 22rpx;
    white-space: break-spaces;
    width: 130rpx;
    line-height: 1.1;
}

.synergy-list-body .synergy-item .synergy-job > l-avatar {
    margin-bottom: 10rpx;
}
