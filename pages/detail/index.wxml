                <l-avatar shape="square"
                          size="60"
                          src="https://game.gtimg.cn/images/lol/act/img/tft/champions/lillia-watch-out.png"
                          l-class="skill-pic"/>
                <view class="skill-txt">
                    <text class="skill-name">小心！</text>
                    <text class="skill-type">主动</text>
                </view>
