.page-simulator {
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    position: relative;
    z-index: 2;
    margin-top: .3rem;
}

.simulator-center {
    width: 100%;
}

.simulator-content {
    padding: .34rem .27rem .3rem .3rem;
    background: rgba(26,31,58,.5);
    border-radius: .1rem;
    margin: 0 0;
}

.simulator-content:first-child {
    margin: 0;
}
