<l-tab-bar text-color="#8a8a8a" text-selected-color="#2c2c2c" list="{{list}}" />
<import src="/template/hero-table/index.wxml"></import>
<import src="/template/equipment-table/index.wxml"></import>
<import src="/template/synergy-table/index.wxml"></import>
<import src="/template/hex-table/index.wxml"></import>
<view class="container" style="">
    <l-tabs l-class-header-line="header-line" hasLine="{{true}}" scrollable bind:linchange="onTabTabBar">
        <l-tabpanel tab="英雄" key="hero" slot="hero">
            <template is="hero-table" data="{{...heroData}}"></template>
        </l-tabpanel>
        <l-tabpanel tab="装备" key="equipment" slot="equipment">
            <template is="equipment-table" data="{{...equipmentData}}"></template>
        </l-tabpanel>
        <l-tabpanel tab="羁绊" key="synergy" slot="synergy">
            <template is="synergy-table" data="{{...synergyData}}"></template>
        </l-tabpanel>
        <l-tabpanel tab="强化符文" key="hex" slot="hex">
            <template is="hex-table" data="{{...hexData}}"></template>
        </l-tabpanel>
    </l-tabs>
</view>
