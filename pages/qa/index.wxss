.page {
    margin: 40rpx;
    background: none;
    display: inline-block;
}

.page .box {
    /*margin-top: 20rpx;*/
}

.page .box .title {
    font-size: 28rpx;
    color: #fcf0f4;
    font-weight: 700;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.page .box .title:first-child {
    /*margin-top: unset;*/
}

.page .box .desc.text {
    font-size: 26rpx;
    color: #72788e;
}



.page .box .desc .table {
    display: flex;
    flex-direction: column;
    margin-top: 10rpx;
}

.page .box .desc .table .tr {
    display: flex;
    flex-direction: row;
}


.page .box .desc .table .tr .th,
.page .box .desc .table .tr .td {  /* 公有的属性 */
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;            /* 自动换行 */
    width: calc(100% / 6);
    text-align: center;         /* 文本居中 */
    justify-content:center;     /* 主轴居中 */
    align-items: center;        /* 交叉轴居中 */
}

.th {
    padding: 20rpx;
    font-weight: 800;           /* 字体加重 */
    background-color: #283661;   /* 背景色 */
    color: #fcf0f4;
}

.td {
    padding: 20rpx;
    background-color:#edf3e9;   /* 背景色 */
    font-size: 24rpx;
}
