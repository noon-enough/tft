.page {
    background: none;
}

.page .tips {
    font-size: 26rpx;
    color: #fcf0f4;
    margin-bottom: 20rpx;
    margin-top: 20rpx;
}

.page .rank-list {
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    justify-items: left;
}

.page .rank-list .rank-item {
    display: inline-flex;
    margin-bottom: 20rpx;
}

.page .rank-list .rank-item .title {
    width: 40rpx;
    padding: 10rpx;
    vertical-align: middle;
    justify-content: center;
    justify-items: center;
    text-align: center;
    color: #fcf0f4;
}

.page .rank-list .rank-item .title.t0 {
  background-color: #ca261a;
}

.page .rank-list .rank-item .title.t1 {
    background-color: #cc841a;
}

.page .rank-list .rank-item .title.t2 {
    background-color: #9a9810;
}

.page .rank-list .rank-item .title.t3 {
    background-color: #24bd6a;
}

.page .rank-list .rank-item .title.t4 {
    background-color: #2072c7;
}

.page .rank-list .rank-item .desc {
    display: inline-block;
    vertical-align: middle;
}

.page .rank-list .rank-item .component-champion {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    cursor: pointer;
    z-index: 1;
}

.synergy-rank-list .synergy-rank-item {
    min-height: 120rpx;
    height: auto;
    overflow: hidden;
    border: 2rpx solid transparent;
    box-sizing: border-box;
    -webkit-transition: border-color .3s,height .3s;
    -moz-transition: border-color .3s,height .3s;
    -o-transition: border-color .3s,height .3s;
    transition: border-color .3s,height .3s;
    clear: both;
    border-bottom-color: rgba(255,255,255,.05);
}

.synergy-rank-list  .synergy-rank-item .synergy-rank-info {
    padding: 10rpx 20rpx 10rpx 8rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    justify-items: center;
    align-items: center;
    align-content: center;
}


.synergy-rank-list  .synergy-rank-item .synergy-rank-info .synergy-list {
    width: 56%;
    display: inline-block;
    flex: 1;
    vertical-align: middle;
    line-height: 1;
    white-space: initial;
}

.synergy-rank-list  .synergy-rank-item .synergy-rank-info .number-list {
    display: flex;
    flex-direction: column;
    vertical-align: middle;
}

.synergy-rank-list  .synergy-rank-item .synergy-rank-info .number-list view {
    color: #6c7a95;
    display: inline-block;
    vertical-align: middle;
    font-size: 28rpx;
    text-align: center;
}

.synergy-rank-list  .synergy-rank-item .synergy-rank-info .number-list view.active {
    color: #e8f5ff;
    font-weight: bold;
}
