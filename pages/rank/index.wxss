.page {
    background: none;
}

.page .tips {
    font-size: 26rpx;
    color: #fcf0f4;
    margin-bottom: 20rpx;
    margin-top: 20rpx;
}

.page .rank-list {
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    justify-items: left;
}

.page .rank-list .rank-item {
    display: inline-flex;
    margin-bottom: 20rpx;
}

.page .rank-list .rank-item .title {
    width: 40rpx;
    /*font-size: 26rpx;*/
    padding: 10rpx;
    vertical-align: middle;
    justify-content: center;
    justify-items: center;
    /*line-height: 3;*/
    text-align: center;
    color: #fcf0f4;
}

.page .rank-list .rank-item .title.t0 {
  background-color: #ca261a;
}

.page .rank-list .rank-item .title.t1 {
    background-color: #cc841a;
}

.page .rank-list .rank-item .title.t2 {
    background-color: #9a9810;
}

.page .rank-list .rank-item .title.t3 {
    background-color: #24bd6a;
}

.page .rank-list .rank-item .title.t4 {
    background-color: #2072c7;
}

.page .rank-list .rank-item .desc {
    display: inline-block;
    vertical-align: middle;
}

.page .rank-list .rank-item .component-champion {
    /*margin-right: 10rpx;*/
    position: relative;
    display: inline-block;
    vertical-align: middle;
    cursor: pointer;
    z-index: 1;
}
