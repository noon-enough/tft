                                                l-class="champion-pic"
                                                src="{{item.data.image}}"/>
                                    </view>
                                </block>
                            </view>
                        </view>
                    </block>
                    <block wx:if="{{equipment.T4.length}}">
                        <view class="rank-item">
                            <view class="title t4">T4</view>
                            <view class="desc">
                                <block wx:for="{{equipment.T4}}" wx:key="id" wx:for-index="i" wx:for-item="item">
                                    <view class="component-champion" style="margin-left: 10rpx;">
                                        <l-avatar
                                                shape="square"
