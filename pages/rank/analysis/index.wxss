.page-rank-synergy .synergy-info-wrap {
    position: relative;
    margin: .4rem 0 0;
    padding: .4rem;
    background: #002635;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    align-items: center;
}

.page-rank-synergy .synergy-info-wrap {
    background: #041938;
}


.page-rank-synergy .synergy-info-wrap .synergy-data {
    flex-shrink: 0;
}

.page-rank-synergy .synergy-info-wrap .synergy-dropdown {
    position: relative;
    width: 280rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 .4rem 0 0;
    background: #002635;
    font-size: 28rpx;
    font-weight: 700;
    color: #b59758;
    text-align: center;
    border: 2rpx solid #303d67;
    box-sizing: border-box;
    -webkit-transition: border-color .3s;
    -moz-transition: border-color .3s;
    -o-transition: border-color .3s;
    transition: border-color .3s;
}

.page-rank-synergy .synergy-info-wrap .synergy-dropdown {
    background: #041938;
    color: #feaa51;
    border-color: #feaa51;
}

.page-rank-synergy .synergy-info-wrap .synergy-dropdown:before {
    content: "";
    position: absolute;
    top: 0;
    right: 60rpx;
    width: 2rpx;
    height: 100%;
    background: #303d67;
}

.page-rank-synergy .synergy-info-wrap .synergy-dropdown:before {
    background: #feaa51;
}

.page-rank-synergy .synergy-info-wrap .synergy-data .data-item {
    display: inline-block;
    vertical-align: middle;
    margin-left: 20rpx;
}

.page-rank-synergy .synergy-info-wrap .synergy-data .data-item:first-child {
    margin: 0;
}

.page-rank-synergy .synergy-info-wrap .synergy-data .data-item .data-txt {
    display: inline-block;
    vertical-align: middle;
    color: #959db9;
    font-size: 28rpx;
    font-weight: 700;
}

.page-rank-synergy .synergy-info-wrap .synergy-data .data-item .data-txt {
    color: #6c7a95;
}

.page-rank-synergy .synergy-info-wrap .synergy-data .data-item .data-num {
    display: inline-block;
    vertical-align: middle;
    color: #fcf0f4;
    font-size: 28rpx;
    margin: 0 0 0 10rpx;
}

.page-rank-synergy .synergy-info-wrap .synergy-data .data-item .data-num {
    color: #e8f5ff;
}

.page-rank-synergy .synergy-info-wrap .synergy-data .data-item .data-num .down {
    color: #fe4b4b;
    font-size: 26rpx;
}

.page-rank-synergy .hot-lineup {
    width: 100%;
    background: #002635;
}

.page-rank-synergy .hot-lineup,
.page-rank-synergy .synergy-restraint {
    background: #041938;
}

.page-rank-synergy .rank-title {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #192446;
    box-sizing: border-box;
    padding: 0 30rpx;
}

.page-rank-synergy .rank-title .span {
    display: inline-block;
    vertical-align: middle;
    color: #fcf0f4;
    font-size: 28rpx;
    font-weight: 700;
}

.page-rank-synergy .rank-title .sorter {
    float: right;
    text-align: center;
    display: flex;
}

.page-rank-synergy .hot-lineup .rank-title .sorter {
    width: 40%;
}

.page-rank-synergy .hot-lineup .rank-title .sorter .item  {
    width: calc(100% / 3);
    display: flex;
    justify-items: center;
    align-items: center;
    align-content: center;
    vertical-align: middle;
}

.page-rank-synergy .hot-lineup .rank-title .sorter .item .sorter-txt,
.page-rank-synergy .synergy-restraint .rank-title .sorter .item .sorter-txt  {
    color: #6c7a95;
    font-size: 26rpx;
}

.page-rank-synergy .hot-lineup .rank-title .sorter .item .sorter-txt.active,
.page-rank-synergy .synergy-restraint .rank-title .sorter .item .sorter-txt.active {
    color: #e8f5ff;
    font-weight: bolder;
}

.page-rank-synergy .hot-lineup .rank-title .sorter .item .sorter-arrow ,
.page-rank-synergy .synergy-restraint .rank-title .sorter .item .sorter-arrow {
    display: inline-block;
    vertical-align: middle;
    margin-left: 8rpx;
}

.page-rank-synergy .hot-lineup .rank-title .sorter .item .sorter-arrow .icon ,
.page-rank-synergy .synergy-restraint .rank-title .sorter .item .sorter-arrow .icon {
    display: block;
    width: 22rpx;
    height: 22rpx;
}

.page-rank-synergy .hot-lineup-list .lineup-info {
    padding: 0 20rpx;
    margin: 20rpx 0 20rpx;
}

.page-rank-synergy .hot-lineup-list .champion-list {
    display: inline-block;
    vertical-align: middle;
    width: 66%;
}

.page-rank-synergy .hot-lineup-list .number-list {
    display: inline-block;
    vertical-align: middle;
    width: 28%;
}

.page-rank-synergy .hot-lineup-list .champion-list .component-champion {
    margin: 4rpx 4rpx 6rpx 0;

}

.component-champion {
    position: relative;
    display: inline-block;
    vertical-align: middle;
    cursor: pointer;
    z-index: 1;
}

.page-rank-synergy .hot-lineup-list .number-list .span {
    width: 33.33%;
    display: inline-block;
    vertical-align: middle;
    color: #959db9;
    font-size: 26rpx;
    text-align: center;
}

.page-rank-synergy .hot-lineup-list .number-list .span {
    color: #6c7a95;
}

.page-rank-synergy .hot-lineup-list .number-list .span.active {
    color: #fcf0f4;
    font-size: 26rpx;
    font-weight: 700;
}

.page-rank-synergy .hot-lineup-list .number-list .span.active {
    color: #e8f5ff;
}

.page-rank-synergy .synergy-restraint {
    width: 100%;
    background: #002635;
    margin-left: 10rpx;
}

.page-rank-synergy .synergy-restraint-list .number-list .win-rate {
    display: block;
    float: left;
    min-width: 32%;
    max-width: 60%;
    background: #c29e54;
    border-radius: 20rpx;
    text-indent: 10rpx;
}

.page-rank-synergy .synergy-restraint-list .number-list .win-rate {
    background: #feaa51;
    color: #041938;
}

.page-rank-synergy .synergy-restraint-list .number-list .win-times {
    float: right;
    margin-right: 10rpx;
}

.page-rank-synergy .synergy-restraint-list .number-list .win-times {
    color: #e8f5ff;
}

.page-rank-synergy .synergy-restraint .rank-title .sorter {
    width: 40%;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    align-items: center;
}

.page-rank-synergy .rank-title .sorter > view {
    vertical-align: middle;
    display: flex;
    align-items: center;
    justify-content: center;
}

.page-rank-synergy .synergy-restraint .rank-title .sorter > view {
    width: auto;
}


.page-rank-synergy .hot-lineup .rank-title,
.page-rank-synergy .synergy-restraint .rank-title {
    border-color: rgba(255,255,255,.05);
}


.page-rank-synergy .synergy-restraint-list .item {
    position: relative;
    overflow: hidden;
    width: 100%;
    padding: 40rpx 40rpx;
    border: 2rpx solid transparent;
    box-sizing: border-box;
    cursor: pointer;
    -webkit-transition: border-color .3s;
    -moz-transition: border-color .3s;
    -o-transition: border-color .3s;
    transition: border-color .3s;
}

.page-rank-synergy .synergy-restraint-list .synergy-list {
    display: inline-block;
    vertical-align: middle;
    width: 60%;
    line-height: 1;
}

.page-rank-synergy .synergy-restraint-list .number-list {
    display: inline-block;
    vertical-align: middle;
    width: 40%;
    height: 50rpx;
    line-height: 50rpx;
    background: #152043;
    border-radius: 20rpx;
    color: #e8e2d6;
    font-size: 26rpx;
}

.page-rank-synergy .synergy-restraint-list .number-list {
    background: #0e2547;
}

.page-rank-synergy .hot-lineup-list .item {
    position: relative;
    overflow: hidden;
    width: 100%;
    padding: 0rpx 0 0rpx 0;
    border: 2rpx solid transparent;
    box-sizing: border-box;
    cursor: pointer;
    -webkit-transition: border-color .3s;
    -moz-transition: border-color .3s;
    -o-transition: border-color .3s;
    transition: border-color .3s;
}

.page-rank-synergy .hot-lineup-list .synergy-list {
    display: inline-block;
    vertical-align: middle;
    line-height: 1;
    padding-left: 20rpx;
}
