.tab-content {
    margin: 20rpx;
}

.page {
    margin-top: 20rpx;
}

.placeholder {
    text-align: left;
    vertical-align: middle;
    color: #45526b;
    /*line-height: 40px;*/
    font-size: 28rpx;
}

.hex-list {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.hex-list-item {
    width: 100%;
    display: flex;
    margin-bottom: 20rpx;
}

.hex-list-item:first-child{
    margin-top: 20rpx;
}

.hex-list-item .hex-list-title {
    width: 40%;
}

.hex-list-item .hex-list-desc {
    width: 60%;
    text-align: left;
    color: #45526b;
    font-size: 28rpx;
    vertical-align: middle;
}

.hex-list-item .hex-list-title .hex-pic {
    height: 80rpx;
    width: 80rpx;
    background: none;
}
